#!/bin/sh

backupdir=/mnt/backup/$(hostname)/

echo "backing data to folder: $backupdir"

die() {
    echo $1
    exit 1;
}

if [ ! -d $backupdir ]; then
    die "$backupdir does not exist"
fi

time sudo rsync -aAXHv / $backupdir \
    --quiet                         \
    --progress                      \
    --stats                         \
    --delete                        \
    --delete-during                 \
    --delete-excluded               \
    --exclude=/dev                  \
    --exclude=/lost+found/*         \
    --exclude=/media/*              \
    --exclude=/mnt/*                \
    --exclude=/proc/*               \
    --exclude=/run/*                \
    --exclude=/sys/*                \
    --exclude=/tmp/*                \
                                    \
    --exclude=$HOME/.cache/*        \
    --exclude=$HOME/Downloads/*     \
    --exclude=$HOME/Dropbox/*       \
    --exclude=$HOME/dev/*

# vim: tw=0 sts=4 sw=4 et
