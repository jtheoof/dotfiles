[alias]
    edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
    jshint = "!git status -uno -s | cut -f3 -d' ' | ack-grep '.js$' | xargs jshint"

    review-web = !git-push-for --to adrien.frediani@intersec.com --to romain.legodais@intersec.com
    review-tools = !git-push-for --to jonathan.squirawski@intersec.com --to florent.bruneau@intersec.com

    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
    amend = commit -s --amend
    br = branch
    ci = commit
    ch = cherry-pick
    co = checkout
    cv = commit --verbose
    df = diff
    dt = difftool
    dtg = difftool -t gvimdiff
    dfc = diff --cached
    dfw = diff --color-words
    gr = grep -n --untracked --heading --break -e
    fe = fetch
    find = "!f() { git ls-files | ack-grep $1 ; }; f"
    k = !gitk
    lc = log --pretty=oneline --decorate=full --stat --no-merges ORIG_HEAD..
    lg = log -p
    ls = ls-files
    logp = log --pretty=oneline --decorate=full -20
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase -i
    p = commit -p
    post-review = push-for
    mt = mergetool -t vimdiff
    mtg = mergetool -t gvimdiff
    squash = commit -s --amend -C HEAD
    st = status
    sta = status --ignored
    su = submodule update
    sui = submodule update --init
    undo = reset HEAD^
    unstash = stash apply
    who = shortlog -s --
[branch]
    autosetuprebase = always
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[color "branch"]
    current = magenta
    local = magenta
    remote = green
[color "decorate"]
    branch = magenta
    remoteBranch = green
    tag = yellow
    HEAD = magenta
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    header = bold blue
    added = bold green
    changed = bold red
    untracked = bold yellow
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[github]
    user = jtheoof
[mergetool "sublime"]
    cmd = sublime -w $MERGED
    trustExitCode = false
[merge]
    tool = sublime
[push]
    default = tracking
[user]
    name = Jeremy Attali
    email = jeremy.attali@gmail.com
[grep]
    extendedRegexp = true
