#!/bin/sh

# /home
rsync -avzl $HOME/ /run/media/jeremy/heiannidan/ \
    --delete                                     \
    --delete-during                              \
    --delete-excluded                            \
    --exclude=.cache

# /
sudo rsync -avzl / /run/media/jeremy/heianshodan \
    --delete                                     \
    --delete-during                              \
    --delete-excluded                            \
    --exclude=/home                              \
    --exclude=/proc                              \
    --exclude=/run                               \
    --exclude=/sys                               \
    --exclude=/tmp                               \
    --exclude=cache

# vim: tw=0 sts=4 sw=4 et
