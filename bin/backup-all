#!/bin/sh

sudo rsync -aAXvl / /run/media/$USER/$HOSTNAME/  \
    --quiet                                      \
    --progress                                   \
    --stats                                      \
    --delete                                     \
    --delete-during                              \
    --delete-excluded                            \
    --exclude=/dev                               \
    --exclude=/media                             \
    --exclude=/mnt                               \
    --exclude=/proc                              \
    --exclude=/run                               \
    --exclude=/sys                               \
    --exclude=/tmp                               \
    --exclude=/var/log/journal                   \
    --exclude=/var/lib/pacman/sync               \
    --exclude=/lost+found                        \
    --exclude=.cache

# vim: tw=0 sts=4 sw=4 et
