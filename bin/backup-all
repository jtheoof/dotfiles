#!/bin/sh

sudo rsync -avl / /run/media/jeremy/jitte/ \
    --quiet                                \
    --progress                             \
    --stats                                \
    --delete                               \
    --delete-during                        \
    --delete-excluded                      \
    --exclude=/proc                        \
    --exclude=/sys                         \
    --exclude=/dev                         \
    --exclude=/run                         \
    --exclude=/tmp                         \
    --exclude=/mnt                         \
    --exclude=.cache

